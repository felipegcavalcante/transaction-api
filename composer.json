{
    "name": "autodoc/slim-skeleton-api",
    "description": "Skeleton for Rest API development using slim framework",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Application\\": "src/Application",
            "Domain\\": "src/Domain",
            "Infrastructure\\": "src/Infrastructure",
            "Config\\": "config/"
        },
        "files": [
            "src/Infrastructure/Adapters/Support/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "slim/slim": "4.*",
        "laminas/laminas-diactoros": "^2.8",
        "monolog/monolog": "^2.3",
        "vlucas/phpdotenv": "^5.4",
        "php-di/php-di": "^6.3",
        "fig/http-message-util": "^1.1",
        "laminas/laminas-config": "^3.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.4",
        "squizlabs/php_codesniffer": "^3.6",
        "slevomat/coding-standard": "^7.0",
        "phpmd/phpmd": "^2.12",
        "phpunit/php-code-coverage": "^9.2",
        "respect/validation": "^2.2",
        "symfony/var-dumper": "^6.2"
    },
    "scripts": {
        "post-install-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/slevomat/coding-standard"
        ],
        "post-update-cmd": [
            "vendor/bin/phpcs --config-set installed_paths vendor/slevomat/coding-standard"
        ],
        "serve": "php -S localhost:8080 -t public",
        "phpcs": "vendor/bin/phpcs --standard=ruleset.xml",
        "phpstan": "vendor/bin/phpstan analyze",
        "phpmd:ansi": "vendor/bin/phpmd src,config,public,tests/Unit,tests/Integration,tests/Http ansi phpmd.xml",
        "phpunit": "vendor/bin/phpunit --testsuite=default",
        "phpunit:coverage:html": "vendor/bin/phpunit --coverage-html=var/coverage",
        "phpunit:coverage:xml": "vendor/bin/phpunit --coverage-clover var/coverage/coverage.xml",
        "tests": [
            "@phpunit"
        ],
        "qa": [
            "@phpcs",
            "@phpunit",
            "@phpstan",
            "@phpmd:ansi"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false
        }
    }
}
